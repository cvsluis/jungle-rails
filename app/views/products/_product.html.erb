<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <div>
        <% if active_sale? %>
          <s style="font-size: 0.5em; margin-right: 1em;"><%= humanized_money_with_symbol product.price %></s>
          <span style="color: red"><%= humanized_money_with_symbol price_with_discount(product.price) %></span>
        <% else %>
          <span><%= humanized_money_with_symbol product.price %></span>
        <% end %>
      </div>
    </h1>
  <% end%>
  <div>
    <% if product.quantity == 0 %>
      <span class="soldout">Sold Out</span>
    <% else %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    <% end %>
  </div>
</article>
