<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
    <div>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <div class="quantity">
        <span><%= @product.quantity %> in stock at </span>
        <div style="display: flex; flex-direction: row; margin-bottom: 0.5em">
          <% if active_sale? %>
            <s style="margin-right: 0.5em; color: dimgrey"><%= humanized_money_with_symbol @product.price %></s>
            <span style="color: red"><%= humanized_money_with_symbol price_with_discount(@product.price) %></span>
          <% else %>
            <span><%= humanized_money_with_symbol @product.price %></span>
          <% end %>
      </div>
      </div>
      <div class="price">          
        <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn' , method: :post do %>
          <%= fa_icon "shopping-cart", text: 'Add' %>
        <% end %>          
      </div>
    </div>
  </article>

</section>
