<div class="card form-layout">
  <div class="card-body">
    <h1 class="mb-4">Login</h1>

    <%= form_tag('/login') do%>
      <div class="mb-4">
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email", required: true %>
      </div>

      <div class="mb-4">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: true %>
      </div>

      <%= submit_tag "Submit", class: "btn btn-success" %>
    <% end %>
  </div>
</div>