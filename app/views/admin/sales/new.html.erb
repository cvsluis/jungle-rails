<section class="admin-products-new">

  <header class="page-header">
    <h1>Admin &raquo; New Sale</h1>
  </header>

  <div class="well mb-4">
    <%= link_to 'All Sales', [:admin, :sales], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @sale] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-4">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :percent_off %>
          <%= form.number_field :percent_off, class: 'form-control', required: true, min: 0, max: 100%>
        </div>

        <div class="form-group mb-4">
          <%= form.label :starts_on %>
          <%= form.date_field :starts_on, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :ends_on %>
          <%= form.date_field :ends_on, class: 'form-control', required: true %>
        </div>

        <%= form.submit 'Create Sale', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>